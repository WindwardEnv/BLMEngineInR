linters: linters_with_defaults(
    commented_code_linter = NULL,
    trailing_whitespace_linter(allow_empty_lines = TRUE),
    brace_linter = NULL,
    object_name_linter(styles = c("CamelCase", "camelCase")),
    assignment_linter = NULL,
    cyclocomp_linter(30L),
    indentation_linter(hanging_indent_style = "always")
  )
exclusions: list(
    "tools",
    "tests",
    "data-raw",
    "inst",
    "R/RcppExports.R"
  )
encoding: "UTF-8"
