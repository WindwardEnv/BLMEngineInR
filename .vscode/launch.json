{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [        
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "C:/Program Files/R/R-4.4.0/bin/x64/Rscript",
            "args": [
                "--vanilla",
                "-e",
                "source('tools/debug.R')"
            ],
            "env": {
                "R_HOME" : "C:/Program Files/R/R-4.4.0"
            },
            "terminal" : "console",
            "stopOnEntry": false
        },
        {
          "name": "(lldb) Attach to R",
          "type": "lldb",
          "request": "attach",
          "pid": "${command:pickMyProcess}",
          "stopOnEntry": false
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "C:/Program Files/R/R-4.4.0/bin/x64/Rscript.exe",
            "args": [
                "--vanilla",
                "-e",
                "source('tools/debug.R')"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Strawberry/c/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}